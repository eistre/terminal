{
  "$schema": "https://json.schemastore.org/tsconfig",
  // For applications that need to be compiled (functions, standalone apps)
  "extends": "./base.json",
  "compilerOptions": {
    // Emit types only (bundler handles JS transpilation)
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "${configDir}/dist",

    // Build
    "composite": true
  },
  "include": ["${configDir}/src"]
}
