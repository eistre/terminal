# Environment configuration for web application

# General
NODE_ENV='development'  # Options: development, test, production
LOG_LEVEL='info'  # Options: error, warn, info, debug, trace

# Authentication
AUTH_SECRET='Your32CharacterLongSecretKeyHere'  # Required: 32+ characters
USER_EXPIRY_DAYS='90'  # Default: 90
ADMIN_EMAIL='admin@admin.sec'  # Default: admin@admin.sec
ADMIN_PASSWORD='terminal_password'  # Default: terminal_password

# Microsoft OIDC (Optional - set all to enable)
MICROSOFT_CLIENT_NAME='Microsoft'  # Default: Microsoft
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=  # Options: {tenant-id}, common, organizations, consumers

# Database
DATABASE_URL='mysql://terminal:password@localhost:3306/terminal'

# Mailer
MAILER_TYPE='noop'  # Options: noop, azure
MAILER_MAX_RETRIES='3'  # Default: 3
MAILER_CONCURRENCY_LIMIT='10'  # Default: 10
MAILER_RESEND_COOLDOWN_SECONDS='30'  # Default: 30

# Azure mailer (required when MAILER_TYPE=azure)
AZURE_CONNECTION_STRING=
AZURE_SENDER=

# Provisioner
PROVISIONER_TYPE='kubernetes'
PROVISIONER_MAX_RETRIES='3'  # Default: 3
PROVISIONER_CONCURRENCY_LIMIT='10'  # Default: 10
PROVISIONER_CONTAINER_EXPIRY_MINUTES='30'  # Default: 30
PROVISIONER_CONTAINER_IMAGE='ubuntu:24.04'  # Default: ubuntu:24.04
PROVISIONER_CONTAINER_MEMORY_REQUEST='64Mi'  # Default: 64Mi
PROVISIONER_CONTAINER_MEMORY_LIMIT='128Mi'  # Default: 128Mi
PROVISIONER_CONTAINER_CPU_REQUEST='100m'  # Default: 100m
PROVISIONER_CONTAINER_CPU_LIMIT='250m'  # Default: 250m

# SSH keys for container access (required)
# Generate with: ssh-keygen -t ed25519 -f terminal-key -N ""
PROVISIONER_CONTAINER_SSH_PUBLIC_KEY='ssh-ed25519 AAAAC3Nza...YourPublicKeyHere user@host'
PROVISIONER_CONTAINER_SSH_PRIVATE_KEY='-----BEGIN OPENSSH PRIVATE KEY-----
...YourPrivateKeyHere...
-----END OPENSSH PRIVATE KEY-----'

# Kubernetes
KUBECONFIG=  # Optional: path to kubeconfig file (e.g., ~/.kube/config)
KUBERNETES_SERVICE_HOST=  # Optional: auto-set when running in Kubernetes cluster
KUBERNETES_NAMESPACE='default'  # Default: default
KUBERNETES_SERVICE_TYPE='headless'  # Default: headless | Options: headless, nodePort
